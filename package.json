{
  "name": "sumran",
  "version": "0.0.0",
  "scripts": {
    "build": "next build",
    "serve": "next dev",
    "start": "npm run build && next start",
    "commit": "git add . && npx --no-install cz",
    "dry-release": "npx --no-install standard-version --dry-run",
    "release": "npx --no-install standard-version && git push --follow-tags",
    "release-major": "npx --no-install standard-version --release-as major && git push --follow-tags",
    "release-minor": "npx --no-install standard-version --release-as minor && git push --follow-tags",
    "release-patch": "npx --no-install standard-version --release-as patch && git push --follow-tags",
    "add-dependencies": "npm add next react react-dom",
    "remove-dependencies": "npm remove next react react-dom",
    "add-devDependencies": "npm add --save-dev @types/node @types/react cz-conventional-changelog standard-version typescript",
    "remove-devDependencies": "npm remove @types/node @types/react cz-conventional-changelog standard-version typescript",
    "reinstall-dependencies": "npm run remove-dependencies && npm run remove-devDependencies && npm run add-dependencies && npm run add-devDependencies && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karmasakshi/sumran.git"
  },
  "author": "Karmasakshi Goyal <> (https://karmasakshi.com)",
  "license": "Unlicense",
  "private": true,
  "homepage": "https://github.com/karmasakshi/sumran#readme",
  "dependencies": {
    "next": "^10.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "standard-version": "^9.1.0",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
